# encoding: utf-8
<div class="row-fluid">
	<% search_path = admin_users_path %>
	<%= render partial: 'helper/search_box', locals: { path: search_path}%>
</div>	
<%= will_paginate @users %>
<div class="user container-fluid">
	<table class="table table-hover">
		<caption>用户列表</caption>
		<thead>
			<tr>
				<th>姓名</th>
				<th>团队</th>
				<th>邮箱</th>
				<th>权限</th>
				<th>位置</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<% if user.status.active? %>
					<tr style="cursor: pointer;">
				<% else %>
					<tr style="cursor: pointer;" class="grey-text">
				<% end%>
				<td onclick="show_user('<%= user_path(user.id, admin: true)%>')"><%= user.name %></td>
				<td onclick="show_user('<%= user_path(user.id, admin: true)%>')"><%= user.team %></td>
				<td onclick="show_user('<%= user_path(user.id, admin: true)%>')"><%= user.email %></td>
				<td onclick="show_user('<%= user_path(user.id, admin: true)%>')"><%= user.role.text %></td>
				<td onclick="show_user('<%= user_path(user.id, admin: true)%>')"><%= user.display_location %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<%= will_paginate @users %>
